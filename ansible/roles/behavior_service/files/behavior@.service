[Unit]
Description=run behavior test for heads-tails
After=network.target wg_setup@wg0.service

[Service]
Type=simple
ExecStart=/usr/bin/python3 /home/heads-tails/heads-tails/Python/behaviors.py -b %I
ExecStop=/usr/bin/python3 /home/heads-tails/heads-tails/Python/clearRegisters.py
Restart=on-success
RestartPreventExitStatus=SIGTERM SIGKILL

[Install]
WantedBy=multi-user.target